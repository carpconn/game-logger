<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.carpconn.dao.AnimeDAO">

    <resultMap id="map" type="org.carpconn.model.Anime">
        <id property="animeId" column="anime_id" javaType="int"/>
        <result property="totalEpisodes" column="total_episodes"/>
        <result property="currentEpisode" column="current_episode"/>
        <result property="name" column="name"/>
        <result property="startDate" column="start_date" javaType="java.util.Date"/>
        <result property="endDate" column="end_date" javaType="java.util.Date"/>
        <result property="rating" column="rating"/>
        <collection property="tags" javaType="ArrayList" ofType="org.carpconn.model.Tag">
            <result column="tags"/>
        </collection>
    </resultMap>

    <sql id="animeColumns">
        anime.anime_id,
        anime.total_episodes,
        anime.current_episode,
        anime.name,
        anime.start_date,
        anime.end_date,
        anime.rating
    </sql>

    <sql id="tagColumns">
        tag.tag_id,
        tag.anime_id,
        tag.name
    </sql>

    <sql id="from">
        FROM anime
            LEFT JOIN tag ON anime.anime_id = tag.anime_id
    </sql>

    <sql id="selectBase">
        SELECT
        <include refid="animeColumns"/>,
        <include refid="tagColumns"/>
        <include refid="from"/>
    </sql>

    <insert id="create" parameterType="org.carpconn.model.Anime" useGeneratedKeys="true" keyProperty="anime.animeId" keyColumn="anime_id">
        INSERT INTO anime (total_episodes, current_episode, name, start_date, end_date, rating)
        VALUES (#{anime.totalEpisodes}, #{anime.currentEpisode}, #{anime.name}, #{anime.startDate}, #{anime.endDate}, #{anime.rating})
    </insert>

    <select id="findAnime" resultMap="map">
        <include refid="selectBase"/>
        WHERE anime.anime_id = #{animeId}
    </select>

    <select id="findAll" resultMap="map">
        <include refid="selectBase"/>
    </select>

    <update id="update">
        UPDATE anime
        SET name = #{anime.name},
        <if test="anime.totalEpisodes != null">
            total_episodes = #{anime.totalEpisodes},
        </if>
        <if test="anime.startDate != null">
            start_date = #{anime.startDate},
        </if>
        <if test="anime.endDate != null">
            end_date = #{anime.endDate},
        </if>
        <if test="anime.rating != null">
            rating = #{anime.rating},
        </if>
            current_episode = #{anime.currentEpisode}
        WHERE anime_id = #{anime.animeId}
    </update>

    <delete id="delete">
        DELETE FROM anime
        WHERE anime_id = #{animeId}
    </delete>

</mapper>

