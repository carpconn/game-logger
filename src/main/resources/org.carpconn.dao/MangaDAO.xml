<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.carpconn.dao.MangaDAO">

    <resultMap id="map" type="Manga">
        <id property="mangaId" column="manga_id"/>
        <result property="totalChapters" column="total_chapters"/>
        <result property="currentChapter" column="current_chapter"/>
        <result property="name" column="name"/>
        <result property="startDate" column="start_date" javaType="java.util.Date"/>
        <result property="endDate" column="end_date" javaType="java.util.Date"/>
        <result property="rating" column="rating"/>
        <collection property="tags" javaType="ArrayList" ofType="org.carpconn.model.Tag">
            <result column="tags"/>
        </collection>
    </resultMap>

    <sql id="mangaColumns">
        ma.manga_id,
        ma.total_chapters,
        ma.current_chapter,
        ma.name,
        ma.start_date,
        ma.end_date,
        ma.rating
    </sql>

    <sql id="from">
        FROM manga ma
    </sql>

    <sql id="selectBase">
        SELECT
        <include refid="mangaColumns"/>
        <include refid="from"/>
    </sql>

</mapper>


